package com.ureca.school;

public class Employee {
	private String name;
	private int age;
	private char dept;
	
	public Employee(String name, int age, char dept) {
		setName(name);
		setAge(age);
		setDept(dept);
	}
	
	public Employee() {
		this("기본", 20, 'a');
	}
	
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public int getAge() {
		return age;
	}
	public void setAge(int age) {
		checkAge(age);
	}
	public char getDept() {
		return dept;
	}
	public void setDept(char dept) {
		this.dept = dept;
	}
	private void checkAge(int age) {
		if (age < 1 || age > 99){
			System.out.println("Invalid Age(1 ~ 99)");
			System.exit(0);
		}else {
			this.age = age;
		}
	}
	
	public void printAll() {
		System.out.println(name + "\t" + age + "\t" + subj);		
		
	}
	
	
	

}
