package com.ureca.school;

public class ManagerImpl {
	// 1번 : 캡슐화
	private Person[] pa;
	private int index;

	// 2번 : 인스턴스 선언
	private static ManagerImpl instance = new ManagerImpl();
	
	
	private ManagerImpl(int size) {
		pa = new Person[size];
	}
	
	// 1
	public ManagerImpl() {
		this(10);
	}
	
	
	// 3번 : 
	public 	 ManagerImpl getInstance() {   // 이떄 왜 static을 ㅆ는거지? 인스턴르로 사용할떄
		return instance;
	}
	
	public void add(Person p) {   // 다 필요없고 이거 1개로 끝
		pa[index] = p;
		index++;
		
		
	}
}
