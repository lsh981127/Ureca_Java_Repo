package com.ureca.school;

public class Teacher extends Person{
	private String name;
	private int age;
	private String subj;
	
	public Teacher(String name, int age, String subj) {
		super(name, age);
		setSubj(subj);
	}
	
	public Teacher() {this("기본", 99, "자바");}
	

	
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		checkAge(age);
	}

	public String getSubj() {
		return subj;
	}

	public void setSubj(String subj) {
		this.subj = subj;
	}
	
	private void checkAge(int age) {
		if (age < 1 || age > 99){
			System.out.println("Invalid Age(1 ~ 99)");
			System.exit(0);
		}else {
			this.age = age;
		}
	}
	
	
	public void printAll() {
		super.printAll();
		System.out.println(getSubj());		
		
	}
	
	
	
	
}
